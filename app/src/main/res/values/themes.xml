<resources>

    <style name="Theme.RepoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/torch_red</item>
        <item name="colorPrimaryVariant">@color/guardsman_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white_lilac</item>
        <item name="colorSecondaryVariant">@color/guardsman_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.RepoApp.Search">
        <item name="title">@string/search</item>
        <item name="menu">@menu/search_menu</item>
    </style>

    <style name="Theme.RepoApp.Repository">
        <item name="title">@string/repository</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="menu">@menu/repository_menu</item>
    </style>
</resources>
